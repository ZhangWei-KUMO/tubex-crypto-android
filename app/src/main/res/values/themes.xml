<resources>
    <!-- Base application theme. -->
    <style name="Theme.Tubex" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        #1a73e8
        <item name="colorPrimary">#1a73e8</item>
        <item name="colorPrimaryVariant">#1a73e8</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#FFFFFF</item>  <!-- 设置状态栏颜色为白色 -->
        <!-- 设置状态栏图标为深色 -->
        <item name="android:windowLightStatusBar">true</item>
